<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#98333333"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:text="组播地址"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etMCAddr"
                android:text="233.33.33.33"
                android:layout_marginStart="30dp"
                android:layout_width="200dp"
                android:layout_height="60dp"/>

            <TextView
                android:text="组播端口"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etMCPort"
                android:text="3333"
                android:layout_marginStart="30dp"
                android:layout_width="200dp"
                android:layout_height="60dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom|center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnBeginMC"
                android:text="开始推流"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="200dp"
                android:layout_height="50dp">
                <requestFocus/>
            </Button>

            <Button
                android:id="@+id/btnStopMC"
                android:text="停止推流"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="200dp"
                android:layout_height="50dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TextView
            android:text="已推数据流(KB)"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPushedBytes"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_width="300dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/tvStatusInfo"
            android:textSize="23sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>